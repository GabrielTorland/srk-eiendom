@model  IEnumerable<srk_website.Models.ServiceModel>

@{
    ViewData["Title"] = "Services";
}
<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-lg-5">
            <h1 class="text-muted">Services</h1>
            <a asp-area="" asp-controller="Service" asp-action="Upload">Create Service</a>
                <ul class="list-group">            
                @foreach (var item  in Model){
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @item.Title
                        <div class="image-parent">
                            <img src="@item.Uri" class="img-fluid" alt="quixote">
                        </div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>                    
                        <form method="post" asp-action="Delete">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value=@item.Id>
                            <div class="form-group">
                                <input type="submit" value="Delete" class="btn btn-primary"/>
                            </div>
                        </form>   
                    </li>
                }   
            </ul>
            <a asp-action="Index" asp-controller="Admin">Back To Admin Page</a>
        </div>
    </div>
</div>
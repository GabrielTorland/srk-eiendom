@model  IEnumerable<srk_website.Models.ServiceModel>

@{
    ViewData["Title"] = "Services";
}
<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-lg-5">
            <h6 class="text-muted">Services</h6>
            <a asp-area="" asp-controller="Service" asp-action="Upload">Add service</a>
                <ul class="list-group">            
                @foreach (var item  in Model){
            
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @item.Title
                        <div class="image-parent">
                            <img src="@item.Uri" class="img-fluid" alt="quixote">
                        </div>
                    </li>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>                    
                    <form method="post" asp-action="Delete">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value=@item.Id>
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    </form>   
                }   
            </ul>
            <a asp-action="Index" asp-controller="Admin" class="btn btn-info" role="button" >Back to admin page</a>
        </div>
    </div>
</div>
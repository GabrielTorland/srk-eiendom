@model srk_website.Models.ProjectModel

@{
    ViewData["Title"] = "Create Project";
    var Images = (MultiSelectList)ViewBag.Images;
    var SelectedImages = (string[])ViewBag.SelectedImages;
    if (SelectedImages != null)
    {
        SelectedImages.ToList();
    }
}

@section Styles {
    <link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.css" />
}

<h1>Create</h1>

<h4>Project</h4>
<hr />

@if (ViewBag.IsResponse != null)
    {
        if (ViewBag.IsSuccess)
        {
            <div class="alert alert-success">
                @Html.Raw(ViewBag.Message)
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                @Html.Raw(ViewBag.Message)
            </div>
        }
    }

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectDescription" class="control-label"></label>
                <textarea asp-for="ProjectDescription" class="ckeditor" rows="200"></textarea>
                <span asp-validation-for="ProjectDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="selectedProjectImages" class="control-label">Images</label>
                <br />
                <select name="selectedImages" id="selectedProjectImages" class="selectpicker" multiple data-live-search="true">
                    @if (Images != null)
                    {
                        @foreach (var image in Images){
                            @if (SelectedImages == null)
                            {
                                <option id="@image.Value" value="@image.Value" >@image.Text</option>
                            }
                            else
                            {
                                @if (SelectedImages.Contains(image.Value))
                                {
                                    <option id="@image.Value" value="@image.Value" selected>@image.Text</option>
                                }
                                else
                                {
                                    <option id="@image.Value" value="@image.Value">@image.Text</option>
                                }
                            }
                            
                        }
                    }
                </select>
                @if (ViewBag.NoImages != null)
                {
                    <span for="selectedProjectImages" class="text-danger">@ViewBag.NoImages</span>
                }
            </div>
            <p>Select some images before choosing the cover image.</p>
            <div class="form-group">
                <label asp-for="CoverImageId" class="control-label"></label>
                <br />
                <select asp-for="CoverImageId" class="selectpicker"></select>
                <span asp-validation-for="CoverImageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Project List</a>
</div>

@section Scripts {
    <!-- Wordpress ich tool (converts text to html) -->
    <script src="~/lib/ckeditor/ckeditor.js"></script> 
    <!-- Multi selector -->
    <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script> 
        $(document).ready(function () {
            // Activate selector
            $('select').selectpicker();
        });

        $('#selectedProjectImages').change(function(){
            var data = $(this).val();
            alert(data);
            var values = data.split(",");
            var names = [];
            for (var i = 0; i < values.length; i++) { 
                names.push($(`#${values[i]}`).html());
                console.log($(`#${values[i]}`).html())
            }
            $('#CoverImageId').html("");
            for (var i = 0; i < names.length; i++) {
                $('#CoverImageId').append(`<option value="${values[i]}">
                                       ${names[i]}
                                  </option>`);
            }
        });
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

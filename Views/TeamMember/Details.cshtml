@model srk_website.Models.TeamMemberModel

@{
    ViewData["Title"] = "Team Member Details";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-lg-5">
            <h1>Details</h1>

            <h4>Team Member</h4>
            <hr />
            <h6>@Model.FullName</h6> <h6>@Model.Position</h6>

            <div>
                <img src="@Model.Uri" alt="Image Not Found!"/>
                <div>
                    <p>Email: <a href=@($"mailto: {Model.Email}")>@Model.Email</a></p>
                    <p>Tlf: <a href=@($"tel: {Model.Phone}")>@Model.Phone</a></p>
                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                <a asp-action="Index">Back To Team Members</a>
            </div>
        </div>
    </div>
</div>

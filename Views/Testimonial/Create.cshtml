@model srk_website.Models.TestimonialModel

@{
    ViewData["Title"] = "Create Testimonial";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-lg-5">
            <h1>Create</h1>
            <h4>Testimonial</h4>
            <hr />

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Project" class="control-label"></label>
                    <input asp-for="Project" class="form-control" />
                    <span asp-validation-for="Project" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Testimonial" class="control-label"></label>
                    <textarea asp-for="Testimonial" class="ckeditor" rows="200"></textarea>
                    <span asp-validation-for="Testimonial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
                <div>
                    <a asp-action="Index">Back to Testimonials</a>
                </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Wordpress ich tool (converts text to html) -->
    <script src="~/lib/ckeditor/ckeditor.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

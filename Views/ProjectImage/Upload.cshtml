@model srk_website.Models.ProjectImageModel

@{
    ViewData["Title"] = "Upload Project Image";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-lg-5"> 
            <h1>Upload</h1>
            <h4>Project Image</h4>
            <br/>

            @if (ViewBag.IsResponse != null)
                {
                    if (ViewBag.IsSuccess)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Message
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Message
                        </div>
                    }
                }

            <form method="post" enctype="multipart/form-data" asp-action="Upload" asp-controller="ProjectImage">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectName" class="control-label"></label>
                    <input asp-for="ProjectName" class="form-control" />
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="file" class="control-label">Image Upload</label>
                    <input type="file" name="file" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload"/>
                </div>
            </form>

            <a asp-action="Index" asp-controller="ProjectImage">Back To Images</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
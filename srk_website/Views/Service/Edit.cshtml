@model srk_website.Models.ServiceModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />

@if (ViewBag.IsResponse != null)
    {
        if (ViewBag.IsSuccess)
        {
            <div class="alert alert-success">
                @ViewBag.Message
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                @ViewBag.Message
            </div>
        }

    }

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ImageName" type="hidden" value=@Model.ImageName />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" value=@Model.Title />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" value=@Model.Description/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <p>The image should be 1500x1000 pixels.</p>
        <input type="file" name="file" /> 
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" asp-controller="Service" class="btn btn-info" role="button" >Back to services</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}